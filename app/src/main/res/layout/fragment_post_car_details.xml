<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.postCar.views.PostCarDetailsFragment">

        <com.google.android.material.card.MaterialCardView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            style="@style/MaterialCardViewPostStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/top_shape_navigation"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/carMakeButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/ic_add_white_24"
                                android:fontFamily="@font/montserrat"
                                android:text="Make"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/carModelButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/ic_add_white_24"
                                android:fontFamily="@font/montserrat"
                                android:text="Model"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/carYearButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/ic_add_white_24"
                                android:fontFamily="@font/montserrat"
                                android:text="Year"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/carBodyButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/ic_add_white_24"
                                android:fontFamily="@font/montserrat"
                                android:text="Body"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/carConditionButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/ic_add_white_24"
                                android:fontFamily="@font/montserrat"
                                android:text="Condition"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/carTransmissionButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/ic_add_white_24"
                                android:fontFamily="@font/montserrat"
                                android:text="Transmission"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/carFuelButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/ic_add_white_24"
                                android:fontFamily="@font/montserrat"
                                android:text="Fuel"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/carInteriorButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/ic_add_white_24"
                                android:fontFamily="@font/montserrat"
                                android:text="Interior"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/carColorButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/ic_add_white_24"
                                android:fontFamily="@font/montserrat"
                                android:text="Color"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp" />


                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/carLocationButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/ic_add_white_24"
                                android:fontFamily="@font/montserrat"
                                android:text="Location"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/carDutyButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/ic_add_white_24"
                                android:fontFamily="@font/montserrat"
                                android:text="Duty"
                                android:textAllCaps="false"
                                app:cornerRadius="5dp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <include
                        android:id="@+id/car_feature"
                        layout="@layout/fragment_post_car_features" />

                    <include
                        android:id="@+id/car_images"
                        layout="@layout/fragment_post_car_images" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.core.widget.NestedScrollView>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>